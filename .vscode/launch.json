{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "CLI",
            "program": "${workspaceFolder}/src/CLI/Main.ts",
            "outFiles": ["${workspaceFolder}/build/debug/src/CLI/**/*"],
            "sourceMaps": true,
            "preLaunchTask": "tsc"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "program": "${workspaceFolder}/src/Server/Main.ts",
            "outFiles": ["${workspaceFolder}/build/debug/src/Server/**/*"],
            "sourceMaps": true,
            "preLaunchTask": "tsc"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Client",
            "program": "${workspaceFolder}/src/Client/Main.ts",
            "outFiles": ["${workspaceFolder}/build/debug/src/Client/**/*"],
            "sourceMaps": true,
            "preLaunchTask": "tsc"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "AVA Debug",
            "program": "${workspaceRoot}/node_modules/ava-ts/profile.js",
            "localRoot": "${workspaceRoot}",
            "args": [
                "--serial",
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ]
        }
    ]
}