{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "outDir": "./build/debug",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}